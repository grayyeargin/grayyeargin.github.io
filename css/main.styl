/***TRANSITIONS***/
@keyframes fade-out {
	0%   {}
  15%   {background: #fff;}
  100% {background: #fff;}
}

.fade-out {
	animation-name: fade-out;
  animation-duration: 4s;
  -webkit-animation-name: fade-out;
  -webkit-animation-duration: 4s;
}

@-webkit-keyframes zoom-enter {
	0% {
    opacity: 0;
    -webkit-transform: scale3d(.1, .1, .1);
    transform: scale3d(.1, .1, .1);
  }
  90% { opacity: 1; 
		-webkit-transform: scale3d(1.1, 1.1, 1.1);
    transform: scale3d(1.1, 1.1, 1.1);
  }
}

@keyframes zoom-enter {
  0% {
    opacity: 0;
    -webkit-transform: scale3d(.1, .1, .1);
    transform: scale3d(.1, .1, .1);
  }
  50% { opacity: 1; 
		-webkit-transform: scale3d(1.1, 1.1, 1.1);
    transform: scale3d(1.1, 1.1, 1.1);
  }
  100% {
  	opacity: 1;
  }
}

.zoom-enter {
	animation-name: zoom-enter;
  animation-duration: 0.5s;
  -webkit-animation-name: zoom-enter;
  -webkit-animation-duration: 0.5s;
  -webkit-animation-fill-mode: forwards;
  animation-fill-mode: forwards;
}

@-webkit-keyframes zoom-exit {
  0% {
    opacity: 1;
  }
  25% {
    -webkit-transform: scale3d(.05, .3, .3);
    transform: scale3d(.05, .3, .3);
  }
  50% {
    opacity: 0;
    -webkit-transform: scale3d(.3, .3, .3);
    transform: scale3d(.3, .3, .3);
  }

  100% {
    opacity: 0;
  }
}

@keyframes zoom-exit {
    0% {
    opacity: 1;
  }
  25% {
    -webkit-transform: scale3d(.01, 1, 1);
    transform: scale3d(.01, 1, 1);
  }
  50% {
    -webkit-transform: scale3d(.01, .01, 1);
    transform: scale3d(.01, .01, 1);
    opacity: 1;
  }

  100% {
    opacity: 0;
    -webkit-transform: scale3d(.01, .01, 1);
    transform: scale3d(.01, .01, 1);
  }
}

.zoom-exit {
	animation-name: zoom-exit;
  animation-duration: .8s;
  -webkit-animation-name: zoom-exit;
  -webkit-animation-duration: .8s;
}














