section#portfolio
	display: none
	for port in (1..4)
		.work-example:nth-of-type({port})
			top: 48px
			left: 230px * (port - 1)

	for port in (5..8)
		.work-example:nth-of-type({port})
			top: 303px
			left:  230px * (port - 5)
	@media (max-width: 1200px)
		for port in (4 8)
			.work-example:nth-of-type({port})
				top: 548px
				left: 57.5px * (port - 4)
	@media (max-width: 900px)
		for port in (3 4 7 8)
			.work-example:nth-of-type({port})
				if port % 2
					top: 548px
				else
					top: 548px + 255px
				if port < 5
					left: 0
				else 
					left: 230px

	.container {
		responsive-container()
	}
	.work-example {
		transition: left 0.5s, top 0.5s, opacity 1s
		-webkit-transition: left 0.5s, top 0.5s, opacity 1s
		position: absolute;
		width: 200px;
		height: 250px;
		font-size: 14px;
	}
	.work-description {
		display: none;
		position: absolute;
		top: 0;
		left: 0;
		.left-section {
			vertical-align: top;
			padding-top: 210px;
			width: 250px;
			display: inline-block;
		}
		.content {
			width: 70%;
			display: inline-block;
		}
	}
	.work-image {
		height: 200px;
		width: 200px;
		cursor: pointer;
		opacity: 1.0;
		border-radius: 5px;
	}
	.work-example.active {
		top: 0;
		left: 0;
	}
	.work-example.hidden, .opacity {
		transition: opacity 0.4s;
		-webkit-transition: opacity 0.4s
	}
	.close {
		position: absolute;
		top: -5px;
		right: 0;
		font-size: 32px;
		cursor: pointer;
		color: #000;
	}
	.gallery {
		margin-top: 15px;
	}
	.box-image {
		width: 95px;
		height: 85px;
		object-fit: contain;
		border: 1px solid blue-text;
		border-radius: 5px;
		margin-top: 10px;
	}
	.grayscale {
    filter: url("data:image/svg+xml;utf8,<svg xmlns=\'http://www.w3.org/2000/svg\'><filter id=\'grayscale\'><feColorMatrix type=\'matrix\' values=\'0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0.3333 0.3333 0.3333 0 0 0 0 0 1 0\'/></filter></svg>#grayscale"); /* Firefox 3.5+, IE10 */
