@import 'variables'

section#intro {
	width: 100%;
	height: 100vh;
	display: flex;
	display:-webkit-flex;
	align-items: center;
	-webkit-align-items: center;
	margin-top: -25px;
	
	.container {
		width: 100%;
	}
	
	.content {
		height: 250px;
		text-align: center;
		margin: 0 auto;
	}
	
	#name-title-img {
		display: none;
	}
	
	#name-title {
		color: #fff;
		display: none;
		font-size: 85px;
		font-weight: bolder;
		line-height: 1;
		padding-bottom: 20px;
		margin: 0;
	}
	
	#location {
		margin: 0;
		font-weight: normal;
		display: none;
		color: #fff;
		font-size: 22px;
		/*intro-background(99%, 1%, intro-background-img)*/
		letter-spacing: 6px;
		margin-bottom: 15px;
		margin-right: -7px;
	}
	
	#occupation {
		margin: 0;
		font-weight: normal;
		display: none;
		color: #fff;
		font-size: 15px;
	}
	
}

// TABLET AND DESKTOP
@media (min-width: 768px) {
	section#intro {
		.content {
			height: 250px;
		}
		
		.intro-bg-desktop {
			display: inline-block;
			position: absolute;
			max-width: 775px;
			width: 95%;
			left: 50%;
			transform: translate(-50%, -30%);
		}
		
		#name-title {
			line-height: inherit;
			padding-bottom: 0;
			font-size: 96px;
			position: relative;
			font-weight: normal;
			margin-right: 30px;
		}
		
		#location {
			letter-spacing: 23.5px;
			margin-right: -65px;
			font-size: 22px;
			position: relative;
		}
		
		#occupation {
			letter-spacing: 2.9px;
			padding-left: 100px;
			font-size: 22px;
			position: relative;
		}
	}
}


// ONLY MOBILE
@media (max-width: 767px) {
	section#intro {
		
		.intro-bg-desktop {
			display: none !important;
		}
		
		#name-title {
			intro-background(70%, 43%, intro-background-img)
		}
		
		#location {
			intro-background(99%, 1%, intro-background-img)
			margin-bottom: 15px;
		}
		
		#occupation {
			intro-background(99%, 10%, intro-background-img)
		}
		
	}
}
