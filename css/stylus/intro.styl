@import 'variables'

section#intro {
	width: 100%;
	height: 100vh;
	display: flex;
	display:-webkit-flex;
	align-items: center;
	-webkit-align-items: center;
	margin-top: -25px;
	
	.container {
		width: 660px;
	}
	
	.content {
		height: 250px;
		text-align: center;
		margin: 0 auto;
	}
	
	#name-title-img {
		display: none;
	}
	
	#name-title {
		display: none;
		intro-background(70%, 43%, intro-background-img)
		font-size: 85px;
		font-weight: bolder;
		line-height: 1;
		padding-bottom: 20px;
	}
	
	#location {
		/*intro-background(99%, 1%, intro-background-img)*/
		letter-spacing: 6px;
		intro-background(99%, 1%, intro-background-img)
		margin-bottom: 15px;
		margin-right: -7px;
	}
	
	#occupation {
		intro-background(99%, 10%, intro-background-img)
		font-size: 15px;
	}
	
}

@media (min-width: 768px) {
	section#intro {
		.content {
			height: 250px;
		}
		
		#name-title {
			line-height: inherit;
			padding-bottom: 0;
			font-size: 96px;
		}
		
		#location {
			letter-spacing: 23.5px;
			margin-right: -29px;
		}
		
		#occupation {
			letter-spacing: 2.9px;
			padding-left: 7px;
			font-size: 22px;
		}
	}
}
