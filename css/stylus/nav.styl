header {
	padding: 0 10px;
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	background: #fff;
	z-index: 1;
	
	.header-container {
		margin: 0 auto;
	}
	
	#logo {
		font-size: 24px;
		color: blue-text;
		display: inline-block;
		
		a {
			color: blue-text;
			text-decoration: none;
			element-trans(color, 0.2s)
			&:hover {
				color: orange-color;
			}			
		}
		
	}
	
	nav {
		display: inline-block;
	}
	
	ul {
		unstyle-list()
		
		li {
			display: inline-block;
			padding: 0 5px;
		}
	}
	
}

@media (min-width: 768px) {
	header {
		padding: 10px;
		z-index: 0;
		
		#logo {
			display: block;
		}
		
		ul {
			li {
				display: block;
				padding: 0;
			}
		}
	}
}